@inject NavigationManager navigationManager

<div class="top-row ps-3 navbar">
	<div class="container-fluid">
		<button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
			<Icon Type="menu" Theme="outline" />
		</button>
	</div>
</div>

<div class="@NavMenuCssClass nav-scrollable" >
	<nav class="flex-column">
		<div class="px-3 text-center">

			<div class="row py-3">
				<div class="col-md-6">
					<img src="https://www.umbrellagraphics.com/realestate/fc/uploads/189/3868_880_0.jpg" width="100" height="50" />
				</div>
				<div class="col-md-6">
					<img src="https://pluspng.com/img-png/our-smileys-for-your-business-because-happy-people-inspire-change-1042.png" class="rounded-circle" width="50" height="50"/>
				</div>
			</div>
			<div class="py-3">
				<div class="py-1">
					<AntDesign.Progress Type="ProgressType.Circle" Percent=100 />
					<p>بودجه مصرف شده</p>
				</div>
				<div class="row  py-1 text-center align-content-center">
					<div class="col-5 border border-1 rounded-3 mx-auto  py-1" style="border-style: dashed !important">
						<p>درآمد</p>
						<p>12,000 ریال</p>

					</div>
					<div class="col-5 border border-1 rounded-3 mx-auto py-1" style="border-style: dashed !important">
						<p>هزینه</p>
						<p>12,000 ریال</p>

					</div>
				</div>
			</div>
			<div class="py-3 mx-auto">
				<div class="row  py-1">
					<div class="col-6">
						<Button Style="height:100px;width:100px" OnClick='(() => NavigateTo("cost"))' Type="@ButtonType.Dashed">@(string.Concat(Resources.DataDictionary.Add," ", Resources.DataDictionary.Cost))</Button>
					</div>
					<div class="col-6">
							<Button Style="height:100px;width:100px" OnClick='(() => NavigateTo("income"))' Type="@ButtonType.Dashed">@(string.Concat(Resources.DataDictionary.Add, " ", Resources.DataDictionary.Income))</Button>
					</div>
				</div>
				<div class="row  py-1">
					<div class="col-4">
						<Button Style="height:100px;width:100px" Type="@ButtonType.Dashed">بانک ها</Button>
					</div>
					<div class="col-4">
						<Button Style="height:100px;width:100px" Type="@ButtonType.Dashed">حساب ها</Button>
					</div>
					<div class="col-4">
						<Button Style="height:100px;width:100px" Type="@ButtonType.Dashed">طرف حسابها</Button>
					</div>
				</div>
				<div class="row  py-1">
					<div class="col-4">
						<Button Style="height:100px;width:100px" Type="@ButtonType.Dashed">رویداد ها</Button>
					</div>
					<div class="col-4">
						<Button Style="height:100px;width:100px" Type="@ButtonType.Dashed">دسته‌بندی ها</Button>
					</div>
					<div class="col-4">
						<Button Style="height:100px;width:100px" Type="@ButtonType.Dashed">پروژه‌ ها</Button>
					</div>
				</div>
				<div class="row  py-1">
					<div class="col-4">
						<Button Style="height:100px;width:100px" Type="@ButtonType.Dashed">ارز ها</Button>
					</div>
					<div class="col-4">
						<Button Style="height:100px;width:100px" Type="@ButtonType.Dashed">اعضای خانوده</Button>
					</div>
					<div class="col-4">
						<Button Style="height:100px;width:100px" Type="@ButtonType.Dashed">تنظمیات</Button>
					</div>
				</div>

			</div>
		</div>
	</nav>
</div>

@code {
	private bool collapseNavMenu = true;

	[Parameter]
	public EventCallback<bool> collapseNavMenuEvent { get; set; }

	private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

	private async Task ToggleNavMenu()
	{
		collapseNavMenu = !collapseNavMenu;
		await collapseNavMenuEvent.InvokeAsync(collapseNavMenu);
	}

	private void NavigateTo(string path,bool forceLoad = false)
	{
		navigationManager.NavigateTo(path, forceLoad);
	}
}
