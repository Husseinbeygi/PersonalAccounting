
<div class="row mb-3">
	<div class="col-1 mx-auto text-center">
		<View></View>
	</div>
	<div class="col-9 mx-auto text-center">
		@(ChildContent)
@*		<Summery></Summery>
*@	</div>
	<div class="col-2 mx-auto text-center">
		<Toolbar OnAddClick="OnAddClick" 
			OnDeleteClick="OnDeleteClick" 
			OnEditClick="OnEditClick" 
			OnRefreshClick="OnRefreshClick"
			canDelete="canDelete"
		></Toolbar>
	</div>
</div>


@code {
	[Parameter]
	public RenderFragment ChildContent { get; set; }

	[Parameter]
	public EventCallback OnAddClick { get; set; }

	[Parameter]
	public EventCallback OnDeleteClick { get; set; }

	[Parameter]
	public EventCallback OnEditClick { get; set; }

	[Parameter]
	public EventCallback OnRefreshClick { get; set; }

	[Parameter]
	public bool canDelete { get; set; }
}
