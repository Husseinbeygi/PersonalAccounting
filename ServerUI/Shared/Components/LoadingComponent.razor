@if (Enabled)
{
	<div style="height: 73vh!important" class=" d-flex align-items-center justify-content-center gap-3">
		<Spin Indicator="loadingIcon" Tip="@(string.Concat(Resources.DataDictionary.Loading,"..."))">
		</Spin>
	</div>
}
else
{
	@(ChildContent)
}


@code {

	[Parameter]
	public RenderFragment ChildContent { get; set; }

	[Parameter]
	public bool Enabled { get; set; }

	RenderFragment loadingIcon = @<Icon Type="loading" Theme="outline" Style="font-size: 24px" Spin />;

}
