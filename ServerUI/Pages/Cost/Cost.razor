@page "/cost"
@using ServerUI.Shared.Components.Apps
@using ServerUI.Pages.Cost.Components
<h3>Cost</h3>
<div class="py-2" dir="ltr">
	<Toolbar OnAddClick="OpenForm"/>
</div>
<div class="py-2">
	<CostGrid />
</div>


<Modal Title="Test"
	   Visible="@(_visible)" 
	   OnOk="@(OnSubmit)"
	   OnCancel="@(OnCancel)"
	   Width="800">


	<CostForm @ref="_costForm" />

</Modal>

@code {
	CostForm _costForm = new();
	bool _visible = false;

	void OpenForm()
	{
		_visible = true;
	}
	void OnSubmit()
	{
		_costForm.Submit();
	}
	void OnCancel()
	{
		_visible = false;

	}
}


